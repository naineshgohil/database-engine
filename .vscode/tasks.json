{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "zig build",
      "type": "shell",
      "command": "zig",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "zig build (debug)",
      "type": "shell",
      "command": "zig",
      "args": ["build", "-Doptimize=Debug"],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}
